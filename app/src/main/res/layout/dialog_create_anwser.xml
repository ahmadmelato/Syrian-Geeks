<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dinnextltarabicregular"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="اضافة إجابة"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dinnextltarabicregular"
            android:text="الاجابة"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/topic_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:autofillHints=""
            android:background="@drawable/ic_path_2480"
            android:fontFamily="@font/dinnextltarabicregular"
            android:hint="الاجابة"
            android:inputType="text"
            android:minHeight="70dp"
            android:paddingHorizontal="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_rectangle_142"
                android:fontFamily="@font/dinnextltarabicregular"
                android:text="إضافة" />

            <Button
                android:id="@+id/cancel_button"
                style="@style/Theme.SyrianGeeks.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_path_2480"
                android:fontFamily="@font/dinnextltarabicregular"
                android:text="تجاهل" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>