<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity.PublicEventsDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <include
                android:id="@+id/main_toolbar"
                layout="@layout/back_bar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:minHeight="100dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_events" />
            </RelativeLayout>

            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dinnextltarabicregular"
                android:text="الفعاليات"
                android:textSize="20sp"
                android:layout_margin="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_dis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/dinnextltarabicregular"
                android:text="حدث سنوي مميز يجمع الخريجين من مختلف السنوات والمتخصصين من مختلف القطاعات لتبادل الأفكار"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dinnextltarabicregular"
                    android:lines="1"
                    android:text="10شباط 2022 "
                    android:textAlignment="textEnd"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/event_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dinnextltarabicregular"
                    android:lines="1"
                    android:text="تركيا غازي عنتاب"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <ProgressBar
                    android:id="@+id/mainprogress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/shap_1"
                    android:indeterminateDrawable="@drawable/cpb_1"
                    android:indeterminateDuration="@android:integer/config_longAnimTime"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btulike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_rectangle_142"
                    android:fontFamily="@font/dinnextltarabicregular"
                    android:minWidth="350dp"
                    android:text="@string/like" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</layout>